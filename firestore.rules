rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own profile, but only write to specific fields.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
    }

    // Posts can be read by anyone, but only created/edited/deleted by the author.
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth.uid == request.resource.data.authorId;
    }

    // Feedback can be written by anyone.
    match /feedback/{feedbackId} {
      allow create: if true;
    }
    
    // App data is read-only for authenticated users.
    match /app_data/{docId} {
       allow read: if request.auth != null;
    }

    // --- Chat Rules ---
    // A user can only read/write a chat document if they are a participant.
    match /chats/{chatId} {
      allow read, write: if request.auth.uid in resource.data.participants;

      // A user can only read/write messages in a chat if they are a participant.
      match /messages/{messageId} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}